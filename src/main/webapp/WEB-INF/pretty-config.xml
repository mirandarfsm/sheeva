<?xml version="1.0" encoding="UTF-8"?>
<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/pages/login/login.jsf" />
	</url-mapping>

	<url-mapping id="principal">
		<pattern value="/principal" />
		<view-id value="/pages/principal/pagina-principal.jsf" />
	</url-mapping>

	<url-mapping id="cadastrar-usuario-lista">
		<pattern value="/usuario" />
		<view-id value="/pages/usuario/cadastrar-usuario-lista.jsf" />
	</url-mapping>
	
	<url-mapping id="cadastrar-usuario-formulario">
		<pattern value="/usuario/#{id}" />
		<view-id value="/pages/usuario/cadastrar-usuario-formulario.jsf" />
	</url-mapping>

	<url-mapping id="cadastrar-servidor-lista">
		<pattern value="/servidor" />
		<view-id value="/pages/servidor/cadastrar-servidor-lista.jsf" />
	</url-mapping>

	<url-mapping id="cadastrar-servidor-formulario">
		<pattern value="/servidor/#{id}" />
		<view-id value="/pages/servidor/cadastrar-servidor-formulario.jsf" />
	</url-mapping>

	<url-mapping id="exibir-servidor">
		<pattern value="/exibir-servidor/#{id}" />
		<view-id value="/pages/servidor/exibir-servidor.jsf" />
	</url-mapping>

	<url-mapping id="cadastrar-instancia-lista">
		<pattern value="/instancia" />
		<view-id value="/pages/instancia/cadastrar-instancia-lista.jsf" />
	</url-mapping>
	
	<url-mapping id="configuracao-instancia">
		<pattern value="/instancia/#{id}" />
		<view-id value="/pages/instancia/configuracao-instancia.jsf" />
	</url-mapping>
	
	<url-mapping id="cadastrar-versao-formulario">
		<pattern value="/versao/#{id}" />
		<view-id value="/pages/versao/cadastrar-versao-formulario.jsf" />
	</url-mapping>
	
	<url-mapping id="cadastrar-versao-lista">
		<pattern value="/versao" />
		<view-id value="/pages/versao/cadastrar-versao-lista.jsf" />
	</url-mapping>
	
	<url-mapping id="cadastrar-sistema-formulario">
		<pattern value="/sistema/#{id}" />
		<view-id value="/pages/sistema/cadastrar-sistema-formulario.jsf" />
	</url-mapping>
	
	<url-mapping id="cadastrar-sistema-lista">
		<pattern value="/sistema" />
		<view-id value="/pages/sistema/cadastrar-sistema-lista.jsf" />
	</url-mapping>
	
	<url-mapping id="alterar-senha">
		<pattern value="/alterar-senha" />
		<view-id value="/pages/usuario/alterar-senha.jsf" />
	</url-mapping>

</pretty-config>
